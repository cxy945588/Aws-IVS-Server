# ==========================================
# Media Server 環境變數配置
# ==========================================

# ==========================================
# Server 配置
# ==========================================
NODE_ENV=development
PORT=3001
SERVER_ID=media-server-01
SERVER_IP=localhost

# ==========================================
# API Server 配置
# ==========================================
# API Server URL (用於註冊和獲取 Stage 列表)
API_SERVER_URL=http://localhost:3000

# API Server 認證
API_SECRET_KEY=your_api_secret_key_here
MEDIA_SERVER_SECRET=your_media_server_secret_key_here

# ==========================================
# AWS 配置
# ==========================================
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_access_key_here
AWS_SECRET_ACCESS_KEY=your_secret_key_here

# ==========================================
# WHIP 配置
# ==========================================
# IVS WHIP 端點
WHIP_ENDPOINT=https://global.whip.live-video.net

# ==========================================
# 監控配置
# ==========================================
# 日誌等級: debug, info, warn, error
LOG_LEVEL=info

# 心跳間隔 (毫秒)
HEARTBEAT_INTERVAL=30000

# ==========================================
# 功能開關
# ==========================================
# 是否啟用自動 Stage 同步
ENABLE_AUTO_SYNC=true

# Stage 同步間隔 (毫秒)
STAGE_SYNC_INTERVAL=60000

# 是否啟用詳細日誌
ENABLE_DETAILED_LOGGING=true
